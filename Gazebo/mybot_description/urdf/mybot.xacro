<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mybot">
 <xacro:include filename="$(find mybot_description)/urdf/camera_urdf.xacro" />
 <material name="white">
   <color rgba="1 1 1 1"/>
 </material>
 <material name="black">
   <color rgba="0 0 0 0"/>
 </material>
 <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
 </xacro:macro>
 <xacro:property name="pi" value="3.1415" />
 <link name="chassis">
   <visual>
     <geometry>
        <box size="0.3 0.3 0.2"/>
     </geometry>
     <origin rpy="0 0 0" xyz="0 0 0.1"/>
     <material name="white"/>
   </visual>
   <xacro:default_inertial mass="10"/>
 </link>
 <link name="gripperarm">
   <visual>
     <geometry>
       <cylinder length="0.2" radius="0.01"/>
     </geometry>
     <origin rpy="0 1.57075 0" xyz="0.1 0 0"/>
     <material name="white"/>
   </visual>
 </link>
 <xacro:macro name="wheel_joint" params="prefix x y"> 
  <link name="${prefix}">
    <visual>
       <geometry>
          <cylinder length="0.01" radius="0.05"/>
       </geometry>
       <origin rpy="1.57075 0 0" xyz="0 0 0"/>
       <material name="black"/>
    </visual>
    <xacro:default_inertial mass="1"/>
  </link>
  <joint name="chassis_${prefix}" type="revolute">
        <parent link="chassis"/>
        <child link="${prefix}"/>
        <origin rpy="0 0 0" xyz="${x} ${y} 0.1"/>
  </joint>
  <transmission name="${prefix}_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${prefix}_wheel_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="$chassis_{prefix}">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>
    <gazebo reference="${prefix}_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Grey</material>
    </gazebo>
 </xacro:macro>
 <xacro:wheel_joint prefix="front_left" x="0.15" y="0.15"/>
 <xacro:wheel_joint prefix="front_right" x="0.15" y="-0.15"/>
 <xacro:wheel_joint prefix="back_left" x="-0.15" y="0.15"/>
 <xacro:wheel_joint prefix="back_right" x="-0.15" y="-0.15"/>
 <joint name="chassis_gripperarm" type="continuous">
      <parent link="chassis"/>
      <child link="gripperarm"/>
      <origin rpy="0 1.5707 0" xyz="0.15 0 0.1"/>
 </joint>
 <transmission name="gripper_extension_trans" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="gripper_extension_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="chassis_gripperarm">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
 </transmission>


<xacro:macro name="gripper_finger" params="side sign">
   <link name="${side}">
       <visual>
         <geometry>
            <box size="0.01 0.03 0.01"/>
         </geometry>
         <origin rpy="0 0 ${sign*0.7853}" xyz="0 0 0"/>
       </visual>
       <xacro:default_inertial mass="0.05"/>
   </link>
   <joint name="arm_to_${side}" type="revolute">
      <parent link="gripperarm"/>
      <child link="${side}"/>
      <origin rpy="0 0 ${sign*0.7853}" xyz="0 0 0"/>
   </joint>
  <transmission name="${side}_gripper_trans" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${side}_gripper_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="arm_to_${side}">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
   </transmission>
   <joint name="${side}_tip_joint" type="fixed">
      <parent link="${side}"/>
      <child link="${side}_tip"/>
    </joint>
    <link name="${side}_tip">
      <visual>
        <origin rpy="${((sign*-1)-1)/2*pi} 0 0" xyz="0.09137 0.00495 0"/>
        <geometry>
          <mesh filename="package://urdf_tutorial/meshes/l_finger_tip.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://urdf_tutorial/meshes/l_finger_tip.dae"/>
        </geometry>
        <origin rpy="${((sign*-1)-1)/2*pi} 0 0" xyz="0.09137 0.00495 0"/>
      </collision>
      <xacro:default_inertial mass="0.05"/>
    </link>
 </xacro:macro>
 <xacro:gripper_finger side="left_finger" sign="-1"/>
 <xacro:gripper_finger side="right_finger" sign="1"/>
 <xacro:camera name="camera_bot" camera_name="camera" image_format="L8" image_topic_name="image_raw" camera_info_topic_name="camera_info" parent="chassis" hfov="45" focal_length="772.548518" frame_id="optical_frame" hack_baseline="0" image_width="640" image_height="480">
   <origin rpy="0 0 0" xyz="0 0.15 0.3"/>
 </xacro:camera>
 <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
 </gazebo>
</robot>
